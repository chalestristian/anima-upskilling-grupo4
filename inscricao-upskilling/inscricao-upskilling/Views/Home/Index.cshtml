@model inscricao_upskilling.Models.PessoaModel

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Cadastro</title>
    <!-- Incluindo os arquivos do Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="row">
                    <img src="https://www.poupardinheiro.com.br/media/post/1141/1400/anima-gama.jpg" class="img-fluid w-50 m-auto" />
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center">Formulário de Inscrição</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("About", "Home", FormMethod.Post))
                        {
                            <form action="/caminho-do-backend" method="post">
                                <div class="form-group">
                                    <label for="inputNome">Nome:</label>
                                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputCpf">CPF:</label>
                                    @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputCelular">Celular:</label>
                                    @Html.TextBoxFor(m => m.Celular, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Email:</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                                <hr />
                                <div class="form-group">
                                    <label for="inputSenha">Login:</label>
                                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputSenha">Senha:</label>
                                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-success btn-block">Cadastrar</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
